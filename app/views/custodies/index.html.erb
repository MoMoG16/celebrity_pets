<p id="notice"><%= notice %></p>

<h1>Listing Custodies</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custodies.each do |custody| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= link_to 'Show', custody %></td>
        <td><%= link_to 'Edit', edit_custody_path(custody) %></td>
        <td><%= link_to 'Destroy', custody, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to 'New Custody', new_custody_path, class: "btn btn-default" %>
</p>
